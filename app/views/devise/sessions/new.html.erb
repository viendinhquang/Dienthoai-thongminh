
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-success" >
      <div class="panel-heading">
        <div class="panel-title">Sign In
        </div>
      </div>

      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12">
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-user"></i>
            </span>
            <%= f.email_field :email, :class => "form-control", :placeholder => "username or email" %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span>
            <%= f.password_field :password, :class => "form-control", :placeholder => "password" %>
          </div>

          <div class="input-group">
            <% if devise_mapping.rememberable? -%>
              <div class="checkbox">
                <label>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </label>
              </div>
            <% end -%>
          </div>

          <div style="margin-top:10px" class="form-group">
              <%= f.submit "Log in", :class => "btn btn-success" %>
              <%= f.submit "Login with Facebook", :class => "btn btn-primary" %>
          </div>

          <div class="form-group">
            <div class="col-md-12 control">
              <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >Don't have an account!
              </div>
            </div>
          </div>

          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>


