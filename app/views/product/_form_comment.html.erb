<div class="comments">
        <label for="content">Comment :</label>
        <p style="color:red">You must login to comment...</p>
        <div class="form_comment">
          <%= form_for :product_comment, url: product_comments_path, method: :post do |f| %>
            <%= f.text_area :content, id:"content", name: "content", placeholder: "Create your comment...", style: "height:100px"%>
            <%= f.hidden_field :name, placeholder: "Your name(enforce)..", class: "form-control"%>
            <%= f.hidden_field :email, placeholder: "Email..", class: "form-control"%>
            <%= f.hidden_field :product_id, value: "#{@product.id}", placeholder: "product_id.. ", class: "form-control"%>
            <%= f.button "SEND", value: "send", class: "submit_contact"%>
          <% end%>
        </div>
      </div>