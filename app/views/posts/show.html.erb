<style type="text/css">
  h1 {
    color: #FF8B00;
    font-weight: bold;
    font-size: 32px;
  }
  h2 {
    font-size: 20px;
    font-weight: bold;
  }
  .index {
    overflow: auto;
    padding: 0px;
    margin-right: 10px;
}
.content {
  padding: 0px 40px;
}
.comment {
  padding: 5px 0;
}
li {
  padding: 5px;
  display: inline;
