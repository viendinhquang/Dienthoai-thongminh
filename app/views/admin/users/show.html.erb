<%= render partial: "shared/admin_page" %>
<h1>Show User</h1>
<h2>Name: <%= link_to @user.name %></h2>
<h3>Email: <%= @user.email %></h3>
<h3>Birthday: <%= @user.birthday %></h3>
<h3>Gender: <%= @user.sex %></h3>
<h3>Avatar: <%= image_tag(@user.avatar.url, size: "150") if @user.avatar? %></h3>

<%= link_to "Edit", edit_admin_user_path(@user.id), class: "btn btn-warning" %>
<%= link_to "Delete", admin_user_path(@user.id), class: "btn btn-danger", method: :delete %>
<%= link_to "Back", :back, class: "btn btn-primary" %>
