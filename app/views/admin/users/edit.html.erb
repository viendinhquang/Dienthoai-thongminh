
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Update User
        </div>
      </div>

      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12">
        </div>

          <%= form_for :user, url: admin_user_path, method: :put do |f| %>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-user"></i>
            </span>
            <%= f.text_field :name, :class => "form-control", :placeholder => "name" %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-adjust"></i>
            </span>
            <%= f.select :sex, ['Male', 'Female'], :class => "form-control" %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-envelope"></i>
            </span>
            <%= f.email_field :email, :class => "form-control", :placeholder => "email" %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-calendar"></i>
            </span>
            <%= f.text_field :birthday, :class => "form-control", :placeholder => "yyy-mmm-ddd" %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span>
            <%= f.password_field :password, :class => "form-control", :placeholder => "password" %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span>
            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "password confirmation" %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <%= f.label :avatar %>
            <%= f.file_field :avatar %>
            <% if @user.avatar? %>
              <%= link_to image_tag(@user.avatar.thumb.url), admin_user_path(@user.id) %><br>
              <%= f.label :remove_avatar %>
              <%= f.check_box :remove_avatar %>
            <% end %>
          </div>

          <div style="margin-top:10px" class="form-group">
              <%= f.submit "Update", :class => "btn btn-info" %>
              <%= link_to "Back", :back, class: "btn btn-primary" %>
          </div>

          <div class="form-group">
            <div class="col-md-12 control">
              <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" > You had an account!
              </div>
              <%= link_to "Login", new_user_session_path %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>



