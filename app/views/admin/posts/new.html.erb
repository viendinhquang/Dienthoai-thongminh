<div class= "layout main_wrapper">
  <h1>New Post</h1>
  <%= form_for :post, url: admin_posts_path, method: :post do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Enter the title", class: 'form-control' %>
    </p>

    <p>
      <%= f.label :content %>
      <%= f.text_field :content, placeholder: "Enter the content", class: 'form-control' %>
    </p>

    <p>
      <%= f.hidden_field :user_id, value: "#{current_user.id}", placeholder: "Enter the ID user ", class: "form-control" %>
    </p>

    <p>
      <%= f.hidden_field :sub_category_id, placeholder: "Enter the ID sub category from 0 to 7", class: "form-control" %>
    </p>

    <p>
      <%= f.label :category_id %>
      <%= f.select :category_id, ['Smart Phone', 'Tablet', 'Accessories', 'Service', 'Promotion'], placeholder: "Enter the ID sub category from 0 to 4", class: "form-control" %>
    </p>

    <p>
      <%= f.label :image %>
      <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
    </p>

    <%= f.submit "Create", class: "btn btn-success" %>
    <%= link_to "Back", :back, class: "btn btn-primary"%>
  <% end %>
</div>
<script type="text/javascript">
    $("#type_color_picture").bind("change", function(){
        var size_in_megabytes = this.files(0).size/1024/1024;
        if (size_in_megabytes > 1) {
            alert("Maximum file size is 1MB. Please choose an other file!");
        }
    });
</script>
