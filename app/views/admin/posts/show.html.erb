<h1>Show Post</h1>
<h2>Author: <%= link_to @post.user.name, admin_user_path(@post.user.id) %></h2>
<h2>Title: <%= @post.title %></h2>
<h2>Content: <%= @post.content %></h2>
<h2>Name's Sub Catergory: <%= @post.sub_category.name %></h2>

<%= link_to "Back", :back, class: "btn btn-primary"%>
<% if current_user.admin? %>
  <%= link_to "Edit", edit_admin_post_path(@post.id), class: "btn btn-warning" %>
  <%= link_to "Delete", admin_post_path(@post.id), class: "btn btn-danger", method: :delete%>
<% end %>
