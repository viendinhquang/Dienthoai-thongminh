<%= render partial: "shared/admin_page" %>
<h1>Show Type Color</h1>
<h2>Name: <%= link_to @type_color.name%></h2>
<h3>Color code: <%= @type_color.color_code%></h3>
<h3>Product's name: <%= link_to @type_color.product.name , admin_product_path(@type_color.product.id)%></h3>
<h3>Image: <%= link_to image_tag(@type_color.picture.url, size: "150"), admin_type_color_path(@type_color.id) if @type_color.picture? %></h3>

<%= link_to "Edit", edit_admin_type_color_path(@type_color.id), class: "btn btn-warning" %>
<%= link_to "Delete", admin_type_color_path(@type_color.id), class: "btn btn-danger", method: :delete%>
<%= link_to "Back", :back, class: "btn btn-primary"%>